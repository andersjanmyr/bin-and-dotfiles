[alias]
  amend = commit --amend -C HEAD
  br = branch
  c = commit -v
  ca = commit -va
  co = checkout
  conflicts = !git ls-files -u | cut -f 2 | sort -u  
  dump = cat-file -p
  fd = rev-list -n 1 HEAD --
  hist = log --pretty='format:%C(blue)%h%C(red)%d%C(yellow) %s %C(green)%an%Creset, %ar' --graph
  ld = log --diff-filter=D --summary
  ls = ls-files
  m = merge --no-ff
  st = status
  sta = stash
  stat = status
  type = cat-file -t
  untracked = ls-files -o -X.gitignore --exclude=.*

