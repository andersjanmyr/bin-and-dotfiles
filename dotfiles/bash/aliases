# Command Enhancements

alias kindle='sendgmail -t anders.janmyr@kindle.com'
alias kindlec='sendgmail -t anders.janmyr@kindle.com -s Convert'
alias tree=redwood

# MySql
alias mysqlstart='sudo mysql.server start'
alias mysqlstop='sudo mysql.server stop'

# Postgres
alias pgstart='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias pgstop='pg_ctl -D /usr/local/var/postgres stop -s -m fast'

# MongoDB
alias mongostart='mongod run --config /usr/local/Cellar/mongodb/1.8.1-x86_64/mongod.conf'

# Utility
alias reload='source ~/.bashrc'
alias vb='v  ~/bin'

alias less='less -FRSX'
alias h='history'

# Dirs
alias la="ls -A -l -G"
alias c='clear'
alias cl='clear; l'
function cdc() {
    cd $1; ls
}
alias l.='ls -d .[^.]*'
alias l='ls -lhGt'  # -l long listing, most recent first
                    # -G color
alias ll='ls -lhG'  # -l long listing, human readable, no group info

alias md='mkdir -p'
alias s='cd ..'   # up one dir

function mcd() {
    mkdir -p "$1"
    cd "$1"
}
function pd() {
  dir=`find ~ -name "*$1*" -type d -maxdepth 3 | head -1`
  if [ "$dir" != '' ]; then
    cd "$dir"
  else
    echo "Cannot find project dir with name: $1"
  fi
}


function zipr() {
  zip -r $1.zip $1
}

# Processes
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory
alias k9="killall -9"
function killnamed () {
    ps ax | grep -i $1 | cut -d ' ' -f 1 | xargs kill
}


# Git
alias ungit="find . -name '.git' -exec rm -rf {} \;"
alias ga='git add'
alias gap='git add -p'
alias gai='git add -i'
alias gaa='git add --all'
alias gau='git add --update'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit -v'
alias gca='git commit -v -a'
# Commit pending changes and quote all args as message
function gg() {
    git commit -v -m "$*"
}
function gga() {
    git commit -v -am "$*"
}
alias gco='git checkout'
alias gd='git diff'
alias gds='git diff --staged'
alias gl='git hist'
alias gmf='git merge --ff-only'
alias gm='git merge --no-ff'
alias gnp="git log origin/master..master"
alias gpf='git pull --ff-only'
alias g='git status -sb'
alias vg='v .git/config'
alias gpnp='git pull --rebase && git push'



# Rails
alias r="rails"
alias rdbm="bundle exec rake db:migrate"
alias rdbr="bundle exec rake db:reset"
alias be="bundle exec"



function aiff2mp3() {
  lame -h -V 0 $1.aif $1.mp3
}
function wav2mp3() {
  lame -h -V 0 $1.wav $1.mp3
}

alias tweet='v ~/DropBox/work/tweet.txt'

alias flushhosts='sudo dscacheutil -flushcache'

# NE
function dr() {
    pushd /Users/andersjanmyr/External_Projects/ne/web/sites/ne.se 
    drush $@
    popd
}
alias ne='pushd /Users/andersjanmyr/External_Projects/ne/ne_se-profile/themes/ne_bs'

