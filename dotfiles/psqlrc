\pset null 'NULL'
\set HISTFILE ~/.psql_history- :HOST - :DBNAME
\set HISTSIZE 2000
\timing
\set PROMPT1 '(%n@%M:%>) [%/] > '
\set PROMPT2 ''
\encoding unicode
\x auto
\echo 'Common commands:'
\echo '\\?\t\t- Help'
\echo '\\h [name]\t- Help SQL Syntax'
\echo '\\l\t\t- List databases'
\echo '\\d [name]\t- List tables, views, and sequences'
\echo '\\c [dbname]\t- Connect to database'
\echo '\\conninfo\t- Connect information'
\echo '\\q\t\t- Quit'
\echo ''
