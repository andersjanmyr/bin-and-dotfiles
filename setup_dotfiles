#!/bin/bash

echo ". ~/bin/dotfiles/bashrc" > ~/.bashrc
echo ". ~/bin/dotfiles/bashrc" > ~/.bash_profile

if [ ! -L "$HOME/.ssh/config" ]
then
  ln -s ~/bin/dotfiles/ssh/config ~/.ssh/config
fi

if [ ! -L "$HOME/.gitconfig" ]
then
  ln -s ~/bin/dotfiles/gitconfig ~/.gitconfig
fi

if [ ! -L "$HOME/.gitignore" ]
then
  ln -s ~/bin/dotfiles/gitignore ~/.gitignore
fi


echo "source ~/.bashrc # to reload environment"


